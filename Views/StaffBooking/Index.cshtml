@model IEnumerable<AcrylicGame.Models.Booking>

@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="container my-5 fade-in">
    <h1 class="text-center mb-4" style="color: var(--primary-pink);">Manage Bookings</h1>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">No bookings found.</p>
    }
    else
    {
        <table class="table table-hover">
            <thead class="table-pink">
                <tr>
                    <th>Customer</th>
                    <th>Service</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model)
                {
                    <tr>
                        <td>@booking.CustomerName</td>
                        <td>@booking.ServiceDescription</td>
                        <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                        <td>@booking.Status</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-purple btn-sm">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
