@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container my-5 fade-in">
    <h1 class="text-center mb-4" style="color: var(--primary-pink);">Admin Dashboard</h1>

    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Bookings</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalBookings</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Promotions</h5>
                    <p class="display-6 fw-bold">@ViewBag.TotalPromotions</p>
                </div>
            </div>
        </div>
    </div>
</div>
