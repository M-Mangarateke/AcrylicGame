@model IEnumerable<AcrylicGame.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container my-5 fade-in">
    <h1 class="text-center mb-4" style="color: var(--primary-pink);">My Bookings</h1>

    @if (!Model.Any())
    {
        <p class="text-center text-muted">You have no bookings yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-pink">
                    <tr>
                        <th>Booking Date</th>
                        <th>Branch</th>
                        <th>Service Description</th>
                        <th>Status</th>
                        <th>Proof of Payment</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.Branch?.Name</td>
                            <td>@booking.ServiceDescription</td>
                            <td>
                                @if (booking.IsConfirmedByStaff)
                                {
                                    <span class="badge bg-success">Confirmed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                @if (!string.IsNullOrEmpty(booking.ProofOfPaymentPath))
                                {
                                    <a href="@booking.ProofOfPaymentPath" target="_blank" class="btn btn-sm btn-purple">View</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not uploaded</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
