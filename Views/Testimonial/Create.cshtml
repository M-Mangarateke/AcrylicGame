@model AcrylicGame.Models.TestimonialFormViewModel

@{
    ViewData["Title"] = "Submit Testimonial";
}

<div class="container my-5 fade-in">
    <h1 class="text-center mb-4" style="color: var(--primary-pink);">Share Your Experience</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="bg-white p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="CustomerName" class="form-label">Name</label>
                    <input asp-for="CustomerName" class="form-control" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Message" class="form-label">Your Testimonial</label>
                    <textarea asp-for="Message" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="BranchId" class="form-label">Branch</label>
                    <select asp-for="BranchId" asp-items="ViewBag.Branches" class="form-select">
                        <option value="">Select Branch</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-pink w-100 py-2">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
