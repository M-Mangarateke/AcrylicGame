@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Acrylic Game</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <!-- Google Fonts: Poppins -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="icon" type="image/png" href="~/images/logo.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #E91E63;">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="Acrylic Game" width="40" height="40" class="me-2 rounded-circle" />
                    <span class="fw-bold">Acrylic Game</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Services" asp-action="Index">Services</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Testimonial" asp-action="Index">Testimonials</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Gallery" asp-action="Index">Gallery</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Promotions" asp-action="Index">Promotions</a></li>
                        <li class="nav-item"><a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a></li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Client"))
                            {
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="ClientDashboard" asp-action="Index">My Bookings</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Booking" asp-action="Create">Book Now</a></li>
                            }

                            if (User.IsInRole("Staff"))
                            {
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="StaffDashboard" asp-action="Index">Staff Dashboard</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Promotions" asp-action="Create">Add Promotion</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Gallery" asp-action="Upload">Upload Gallery</a></li>
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="Testimonial" asp-action="Pending">Approve Testimonials</a></li>
                            }

                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item"><a class="nav-link text-white" asp-controller="AdminDashboard" asp-action="Index">Admin Dashboard</a></li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var user = await UserManager.GetUserAsync(User);
                            <li class="nav-item me-2"><span class="navbar-text text-white">Welcome, @user?.FullName!</span></li>
                            <li class="nav-item">
                                <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                    <button type="submit" class="btn btn-outline-light">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                            <li class="nav-item"><a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-shrink-0">
        <div class="container mt-4">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-light text-center text-muted py-3 border-top mt-auto">
        &copy; 2025 - Acrylic Game | <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none">Privacy Policy</a>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
