@model AcrylicGame.Models.GalleryUploadViewModel

@{
    ViewData["Title"] = "Upload Gallery Item";
}

<div class="container my-5 fade-in">
    <h1 class="text-center mb-4" style="color: var(--primary-pink);">Upload New Photo</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Upload" method="post" enctype="multipart/form-data" class="bg-white p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-group mb-3">
                    <label asp-for="Caption" class="form-label">Caption</label>
                    <input asp-for="Caption" class="form-control" />
                    <span asp-validation-for="Caption" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Image" class="form-label">Image</label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-pink w-100 py-2">Upload Photo</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
