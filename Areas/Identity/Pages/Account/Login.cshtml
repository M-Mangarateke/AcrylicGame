@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container fade-in">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold" style="color: var(--primary-pink);">Welcome Back 💖</h1>
        <p class="text-muted">Log in to your Acrylic Game account</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="account" method="post" class="bg-white p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                </div>

                <button id="login-submit" type="submit" class="btn btn-pink w-100 py-2">Log in</button>

                <div class="mt-3 login-links text-center">
                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a><br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a><br />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .fade-in {
            animation: fadeInUp 0.8s ease-in-out both;
        }
    </style>
}

