@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container fade-in">
    <div class="text-center mb-4">
        <h1 class="display-5 fw-bold">Forgot Password?</h1>
        <p class="text-muted">Don't worry! We’ll send you a reset link. 💌</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="bg-white p-4 shadow rounded">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-pink w-100 py-2">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .btn-pink {
            background-color: #E91E63;
            color: white;
            transition: all 0.3s ease;
        }

            .btn-pink:hover {
                background-color: #c2185b;
            }

        .fade-in {
            animation: fadeInUp 0.8s ease-in-out both;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}
